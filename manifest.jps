type: install
name: Jelasticozor infrastructure
baseUrl: https://gitlab.hidora.com/softozor/jelasticozor/infrastructure/-/raw/master/

nodes:
- displayName: faasd
  count: 1
  cloudlets: 4
  nodeGroup: vps
  nodeType: ubuntu-vps

onInstall:
  - installFaas

actions:
  installFaas:
    install:
      jps: serverless/manifest.jps
type: install
name: Jelasticozor infrastructure
baseUrl: http://gitlab.hidora.com/softozor/jelasticozor/infrastructure/-/raw/master/

nodes:
- displayName: faasd
  count: 1
  cloudlets: 16
  nodeGroup: faas
  nodeType: docker
  image: centos:latest

onInstall:
  - installFaas

actions:
  installFaas:
    install:
      jps: serverless/manifest.jps
